{
  "name": "data-workflow-system",
  "version": "1.0.8",
  "description": "Data Workflow System - Electron app with TypeScript, React, and Vite",
  "main": "out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "start": "electron-vite preview",
    "build": "electron-vite build",
    "prebuild": "npm run clean",
    "pretest:e2e": "npm run build",
    "pretest:e2e:ui": "npm run build",
    "clean": "rimraf out dist",
    "test": "echo \"Tests not implemented yet\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "package": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "publish": "npm run build && electron-builder --win --publish always",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags"
  },
  "keywords": [
    "electron",
    "typescript",
    "react",
    "vite",
    "workflow"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-separator": "^1.0.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "httpntlm": "^1.7.7",
    "keytar": "^7.9.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^38.3.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "playwright": "^1.47.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^7.1.10"
  },
  "build": {
    "appId": "com.dataworkflow.system",
    "productName": "Data Workflow System",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "node_modules/keytar/build/Release",
        "to": ".",
        "filter": [
          "*.node"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "blehew-augeo",
      "repo": "flowforge"
    }
  }
}
